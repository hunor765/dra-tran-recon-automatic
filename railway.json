{
  "$schema": "https://railpack.com/schema.json",
  "providers": ["python", "node"],
  "python": {
    "version": "3.11"
  },
  "node": {
    "version": "20"
  },
  "build": {
    "cmds": [
      "cd apps/platform/backend && pip install -r requirements.txt"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/platform/backend && uvicorn main:app --host 0.0.0.0 --port $PORT --workers 2",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}
